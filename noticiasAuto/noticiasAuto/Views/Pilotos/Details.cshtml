@model noticiasAuto.Models.Pilotos

@{
    ViewBag.Title = "Details";
}


<div class="alert alert-warning" role="alert">
    <h1>Detalhes do Piloto:</h1> @Html.DisplayFor(model => model.Nome)
</div>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome da Equipa:
        </dt>

        <dd>

            @Html.DisplayFor(model => model.Equipa.Nome)
        </dd>

        <dt>
            Nome do Piloto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            Data de Nascimento:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nacionalidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nacionalidade)
        </dd>

        <dt>
            Fotografia do Piloto:
        </dt>
        <br/>

        <a href="~/Imagens/@Model.Fotografia" target="_parent">
            <img src="~/Imagens/@Model.Fotografia" class="rounded" height="300" width="400" />
        </a>

    </dl>
</div>
@if (User.IsInRole("Admin") || User.IsInRole("Jornalista"))
{
    <p>
        @Html.ActionLink("Editar", "Edit", new
        {
       id = Model.IdPiloto
   }) |
        @Html.ActionLink("Apagar", "Delete", new
        {
       id = Model.IdPiloto
   })
    </p>
}
