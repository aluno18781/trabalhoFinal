@model noticiasAuto.Models.Comentarios

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdComentario)

        <div class="form-group">
            @Html.LabelFor(model => model.Conteudo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Conteudo, new { @class = "form-control", maxLength = "500", @style = "resize:none; width:100%; max-width:700px; height:150px;" })
                @Html.ValidationMessageFor(model => model.Conteudo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-danger" href="@Url.Action("Index","Noticias")">Cancelar</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
